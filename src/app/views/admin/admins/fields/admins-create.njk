<section class="fields-creation">
    <div class="div-fields-creation">
        <div>
            <p class="title">Nome</p>
            <input type="text" name="name" value="{{ user.name }}" placeholder="Insira seu nome" required>
        </div>
        <div>
            <p class="title">Email</p>
            <input type="text" name="email" value="{{ user.email }}" placeholder="Digite seu email" required>
        </div>

        <div class="isadmin">
            <input type="checkbox" name="is_admin" id="is_admin" value="true" {% if user.is_admin == true %}checked{% endif %}>
            <p>Administrador</p>
        </div>
    </div>
</section>