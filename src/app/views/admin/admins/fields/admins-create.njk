<section class="fields-creation">
    <div class="div-fields-creation">
        <div class="item">
            <p class="title">Nome</p>
            <input type="text" name="name" value="{{ user.name }}" placeholder="Insira seu nome">
        </div>
        <div class="item">
            <p class="title">Email</p>
            <input type="text" name="email" value="{{ user.email }}" placeholder="Digite seu email">
        </div>

        {% if user.id != session.userId %}
            <div class="isadmin">
                <input type="checkbox" name="is_admin" id="is_admin" value="{{ user.is_admin }}" {% if user.is_admin == true %}checked{% endif %}>
                <p>Administrador</p>
            </div>
        {% endif %}
    </div>
</section>
<script src="/js/removeColorInput.js"></script>