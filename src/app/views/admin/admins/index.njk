        <form method="POST" action="/admin/admins/index">
            <section class="chefs">
                <div class="chef">
                    <div class="chef-p">
                        <p>Bem Vindo {{ user.name }}</p>
                    </div>
                    <div class="save-chef">
                        <button class="btn-save-chef" type="submit" onclick="validate.validateFields(event)">Salvar</button>
                    </div>
                </div>
            </section>
            
            {% include 'admin/admins/fields/profile-index.njk' %}

            <input type="hidden" name="id" value="id">
        </form>
    </section>
{% endblock %}

