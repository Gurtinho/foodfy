{% extends 'templates/layouts/layout-chefs.njk' %}

{% block content %}
    <form method="POST" action="/admin/chefs?_method=PUT">
        <section class="chefs">
            <div class="edit-chef">
                <div class="edit-chef-p">
                    <p>Editando chef</p>
                </div>
                <div class="save-chef-edit">
                    <a href="/admin/chefs/{{ chef.id }}">
                        <button type="button" class="btn-cancel-chef">Cancelar</button>
                    </a>                    
                    <button class="btn-delete-chef" type="submit" form="form-delete">Deletar</button>
                    <input type="hidden" name="id" value="{{ chef.id }}">
                    <button class="btn-save-chef" type="submit">Salvar chef</button>
                </div>
            </div>
        </section>
        {% include 'templates/fields/fields-chefs.njk' %}
    </form>

    <form class="form-delete" id="form-delete" action="/admin/chefs?_method=DELETE" method="POST">
        <input type="hidden" name="id" value="{{ chef.id }}">
    </form>
{% endblock %}