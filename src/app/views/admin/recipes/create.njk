{% extends 'templates/layouts/layout.njk' %}

{% block content %}
    <form method="POST" action="/admin/recipes">
        <section class="create">
            <div class="create-recipe">
                <div class="create-recipe-p">
                    <p>Criando receita</p>
                </div>
                <div class="save-recipe-create">
                    <a href="/admin/recipes">
                        <button type="button" class="btn-cancel-recipe">Cancelar</button>
                    </a>
                    <button class="btn-save-recipe" type="submit">Salvar receita</button>
                </div>
            </div>
        </section>
        
        {% include 'templates/fields/fields-recipes.njk' %}
        <input type="hidden" name="id" value="id">
    </form>

{% endblock %}

