{% extends 'templates/layouts/layout-recipes.njk' %}

{% block content %}
    <section class="create">
        <div class="index-recipe">
            <div class="index-recipe-p">
                <p>Gerenciar receitas</p>
            </div>
            <div class="save-recipe-index">
                <a href="/admin/recipes/create">
                    <button class="btn-save-recipe" type="submit">Criar nova receita</button>
                </a>
            </div>
        </div>
    </section>
    <section class="fields-list">
        <div class="fields-grid">
        {% for recipe in recipes %}
            <div class="fields-item">
                <img class="fields-img" src="{{ recipe.src }}">
                <div class="fields-info">
                    <h2>{{ recipe.title }}</h2>
                    <p>Por {{ recipe.chefs_name }}</p>
                    <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
                </div>
            </div>
        {% else %}
            <div class="fields-info">
                <p>Você ainda não possui receitas</p>
            </div>
        {% endfor %}
        </div>
        <div class="container-pagination">
            <div class="pagination"
                data-page={{pagination.page}}
                data-total={{pagination.total}}>
            </div>
        </div>
    </section>
{% endblock %}