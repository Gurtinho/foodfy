{% extends "templates/layouts/layout-home.njk" %}

{% block head %}
    <title>Foodfy</title>
{% endblock %}


{% block content %}
    <section class="container">
        <div class="caixa">
            <div class="textos-caixa">
                <h1>As melhores receitas</h1>
                <p>Aprenda a contruir os melhores pratos</br> com receitas criadas por profissionais</br> do mundo inteiro.</p>
            </div>
            <img src="./assets/chef.png">
        </div>
    </section>

    <section class="div-mais-acessadas">
        <div class="sub-acessadas">
            <p class="mais-acessadas">Mais acessadas</p>
        </div>
    </section>

    <section class="acessadas">
        <div class="acess-content">
            {% for recipe in recipes %}
                <div class="comida">
                    <a type="hidden" href="/recipes/food/{{ recipe.id }}">
                        <img class="img" src="{{ recipe.src }}">
                        <h2 class="comidatitle">{{ recipe.title }}</h2>
                        <h3 class="comidaautor">{{ recipe.chefs_name }}</h3>
                    </a>
                </div>
            {% else %}
                <div class="fields-info">
                    <p>Ainda n√£o temos receitas</p>
                </div>
            {% endfor %}
        </div>
        <div class="container-pagination">
            <div class="pagination" data-page={{pagination.page}} data-total={{pagination.total}}></div>
        </div>
    </section>
{% endblock %}