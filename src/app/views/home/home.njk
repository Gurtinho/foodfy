{% extends "templates/layouts/layout-home.njk" %}

{% block head %}
    <title>{{ recipe.title }}</title>
{% endblock %}


{% block content %}
    <section class="container">
        <div class="caixa">
            <div class="textos-caixa">
                <h1>As melhores receitas</h1>
                <p>Aprenda a contruir os melhores pratos</br> com receitas criadas por profissionais</br> do mundo inteiro.</p>
            </div>
            <img src="./img/chef.png">
        </div>
    </section>

    <section class="div-mais-acessadas">
        <div class="sub-acessadas">
            <p class="mais-acessadas">Mais acessadas</p>
        </div>
    </section>

    <section class="acessadas">
        <div class="acess-content">
            {% for recipe in recipes %}
                <div class="comida">
                    <a type="hidden" href="/food/{{ recipe.id }}">
                        <img class="img" src="{{ recipe.image }}">
                        <h2 class="comidatitle">{{ recipe.title }}</h2>
                        <h3 class="comidaautor">{{ recipe.author }}</h3>
                    </a>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}