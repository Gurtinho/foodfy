{% extends "templates/layouts/layout-home.njk" %}

{% block head %}
    <title>{{ recipe.title }}</title>
{% endblock %}

{% block content %}
    <section class="accessfood">
        <section>
            <div class="food">
                <div class="">
                    {% if recipe_files[0] %}
                        <img class="food-img"
                            src="{{ recipe_files[0].src }}"
                            onclick="lightbox.open()">
                    {% endif %}
                </div>
                <div class="lightbox-target">
                    <img src="{{ recipe_files[0].src }}" alt="{{ recipe_files[0].name }}">
                    <a href="" class="lightbox-close"
                        onclick="lightbox.close()">
                        <span class="material-icons">close</span>
                    </a>
                </div>
                <div class="image_preview_dad">
                    <div class="image_preview">
                        {% for recipe in recipe_files %}
                            <img  
                                src="{{ recipe.src }}" 
                                alt="{{ recipe.name }}"
                                {% if loop.index0 == 0 %}
                                    class="first"
                                {% endif %}
                                onclick="imageGallery.setImage(event)">
                        {% endfor %}
                    </div>
                </div>
                <h2 class="food-title-page">{{ recipe.title }}</h2>
                <h3 class="food-author-page">Por {{ recipe.chefs_name }}</h3>
            </div>
        </section>
        <section class="descricao">
            <div class="ingredientes">
                <div class="inf">
                    <h1>Ingredientes</h1>
                    <p class="mostrar">Mostrar</p>
                    <ul class="content">
                        {% for ingredient in recipe.ingredients %}
                        <li class="li">{{ ingredient + ';'}}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>

            <div class="preparo">
                <div class="inf">
                    <h1>Modo de preparo</h1>
                    <p class="mostrar">Mostrar</p>  
                    <ul class="content">
                        {% for preparation in recipe.preparation %}
                        <li class="li">{{ preparation + '.'}}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>

            <div class="adicionais">
                <div class="inf">
                    <h1>Informações adicionais</h1>
                    <p class="mostrar">Mostrar</p>
                    <ul class="content">
                        <li class="li"> 
                            {% if recipe.information != ''%}
                            {{ recipe.information + '.' }}
                            {% else %}
                            Sem informações adicionais.
                            {% endif %}
                            </li>
                    </ul>
                </div>
            </div>
        </section>
    </section>
    {% include 'templates/parts/footer.njk' %}
{% endblock %}
