<section class="fields-creation">
    <div class="div-fields-creation">
        <div>
            <p class="title">Imagem da receita</p>
        </div>

        <div>
            <p class="title">Nome da receita</p>
            <input 
                type="text" 
                name="title" 
                value="{{ recipe.title }}" 
                placeholder="Nome da receita" 
                required>
        </div>

        <div>
            <p class="title">Selecione o chef</p>
            <select name="chef">
                {% for chef in chefsOptions %}
                <option value="{{ chef.id }}" {% if recipes.chef_id == chef.id %} selected {% endif %}>
                    {{ chef.name }}
                </option>
                {% endfor %}
            </select>
        </div>

        <div>
            <p class="title">Ingredientes</p>
            <div class="ingredients">
                {% for ingredient in recipe.ingredients %}
                    <div class="div-ingredients">
                        <input 
                            type="text" 
                            name="ingredients[]" 
                            value="{{ ingredient }}" 
                            placeholder="Adicione um ingrediente" 
                            required>
                    </div>
                {% else %}
                    <div class="div-ingredients">
                        <input 
                            type="text" 
                            name="ingredients[]" 
                            value="{{ ingredient }}" 
                            placeholder="Adicione um ingrediente" 
                            required>
                    </div>
                {% endfor %}
            </div>
            <p class="remove-p">Apague o conteúdo antes</p>
            <div class="div-add-remove">
                <a class="add-ingredient">Adicionar novo ingrediente</a>
                <a class="remove-ingredient">Remover ingrediente</a>
            </div>
        </div>

        <div>
            <p class="title">Modo de preparo</p>
            <div class="preparation">
                {% for prep in recipe.preparation %}
                    <div class="div-preparation">
                        <input 
                            type="text" 
                            name="preparation[]" 
                            value="{{ prep }}" 
                            placeholder="Adicione um passo" 
                            required>
                    </div>
                {% else %}
                    <div class="div-preparation">
                        <input 
                            type="text" 
                            name="preparation[]" 
                            value="{{ prep }}" 
                            placeholder="Adicione um passo" 
                            required>
                    </div>
                {% endfor %}
            </div>
            <p class="remove-p">Apague o conteúdo antes</p>
            <div class="div-add-remove">
                <a class="add-preparation">Adicionar novo passo</a>
                <a class="remove-preparation">Remover passo</a>
            </div>
        </div>

        <div>
            <p class="title">Informações adicionais</p>
            <textarea 
                name="information" 
                cols="30" rows="10" 
                placeholder="Escreva algo sobre a receita :)" required>{{ recipe.information }}</textarea>
        </div>
    </div>
</section>
<script src="/js/addnew.js"></script>