<section class="fields-register">
    <div class="div-fields-register">
        <div>
            <p class="title">Nome</p>
            <input type="text" name="name" value="{{ user.name }}" placeholder="Insira um nome de usuÃ¡rio" required>
        </div>

        <div>
            <p class="title">Email</p>
            <input type="email" name="email" value="{{ user.email }}" placeholder="Insira um email" required 
            onblur="validate.apply(this, 'validEmail')">
        </div>

        <div>
            <p class="title">Senha</p>
            <input type="password" name="password" placeholder="Digite uma senha" required>
        </div>

        <div>
            <p class="title">Repetir senha</p>
            <input type="password" name="passwordrepeat" placeholder="Digite novamente a senha" required>
        </div>
    </div>
    <div class="div-fields-submit">
        <a href="/admin/session/login">
            <span class="material-icons">arrow_back_ios</span>
            <p>Voltar</p>
        </a>
        <button type="submit">Registrar</button>
    </div>
</section>
