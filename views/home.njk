{% extends "layout.njk" %}

{% block head %}
    <title>{{item.title}}</title>
{% endblock %}


{% block content %}
    <section class="container">
        <div class="caixa">
            <div class="textos-caixa">
                <h1>As melhores receitas</h1>
                <p>Aprenda a contruir os melhores pratos</br> com receitas criadas por profissionais</br> do mundo inteiro.</p>
            </div>
            <img src="./img/chef.png">
        </div>
    </section>
    <section class="div-mais-acessadas">
        <div>
            <p class="mais-acessadas">Mais acessadas</p>
        </div>
    </section>
    <section class="acessadas">
        <div class="acess-content">
            {% for item in items %}
                <div class="comida">
                    <img class="img" src="{{item.image}}">
                    <h2 class="comidatitle">{{item.title}}</h2>
                    <h3 class="comidaautor">{{item.author}}</h3>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}